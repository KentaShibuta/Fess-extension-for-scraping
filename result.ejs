<!DOCTYPE html>
<html lang="ja" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>search result</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css"
        integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">
  </head>
  <body>
    <div class="container">
      <div class="row">
        <form method = "POST">
          <input type = "text" class="form-control" value = "<%= keyword %>"" name = "keyword">
          <input type = "hidden" value = "0" name = "start">
          <input type = "hidden" value = <%= num %> name = "num">
          <input class="btn btn-primary" type = "submit">
        </form>
      </div>

      <div class="row">
        <div id="nextprev-btn" style="display:inline-flex">
          <% for (var j = 0; j < page_count; j++) { %>
            <form method = "POST">
              <input type = "hidden" value = "<%= keyword %>" name = "keyword">
              <input type = "hidden" value = <%= j*num %> name = "start">
              <input type = "hidden" value = <%= num %> name = "num">
              <input class="btn btn-outline-primary" type = "submit" value = <%= j+1 %>>
            </form>
          <% } %>
        </div>
      </div>
      
      <div class="row">
        <div class="col">hit number: <%= record_count %></div>
      </div>
      
      <div class="row">
        <div class="col">page num: <%= Object.keys(result).length %></div>
      </div>
  
      <div class="row">
        <table class="table table-striped">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Title</th>
              <th scope="col">To orig. page</th>
            </tr>
          </thead>
          <tbody>
            <% for (var i = 0; i < Object.keys(result).length; i++) { %>
              <tr>
                <th scope="row"><%= i %></th>
                <td><%= result[i].title %></td>
                <td><a href = <%= result[i].url_web %>>Link</a></td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>

      <div class="row">
        <div id="nextprev-btn" style="display:inline-flex">
          <% for (var j = 0; j < page_count; j++) { %>
            <form method = "POST">
              <input type = "hidden" value = "<%= keyword %>" name = "keyword">
              <input type = "hidden" value = <%= j*num %> name = "start">
              <input type = "hidden" value = <%= num %> name = "num">
              <input class="btn btn-outline-primary" type = "submit" value = <%= j+1 %>>
            </form>
          <% } %>
        </div>
      </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.6/umd/popper.min.js" integrity="sha384-wHAiFfRlMFy6i5SRaxvfOCifBUQy1xHdJ/yoi7FRNXMRBu5WHdZYu1hA6ZOblgut" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/js/bootstrap.min.js" integrity="sha384-B0UglyR+jN6CkvvICOB2joaf5I4l3gm9GU6Hc1og6Ls7i6U/mkkaduKaBhlAXv9k" crossorigin="anonymous"></script>
  </body>
</html>